{
  "name": "fichajespi-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo para FichajesPi: backend Spring Boot, frontend Angular y app de escritorio.",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:infra": "turbo run dev:up --filter=@fichaje/infra",
    "dev:down": "turbo run dev:down --filter=@fichaje/infra",
    "dev:stack": "pnpm dev:infra && pnpm dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "docker:dev:up": "turbo run dev:up --filter=@fichaje/infra",
    "docker:dev:down": "turbo run dev:down --filter=@fichaje/infra",
    "docker:dev:logs": "turbo run dev:logs --filter=@fichaje/infra",
    "docker:prod:up": "turbo run prod:up --filter=@fichaje/infra",
    "docker:prod:down": "turbo run prod:down --filter=@fichaje/infra",
    "docker:prod:logs": "turbo run prod:logs --filter=@fichaje/infra"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  }
}
